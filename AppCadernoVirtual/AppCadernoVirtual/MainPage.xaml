<?xml version="1.0" encoding="utf-8" ?>
<!-- criando a conexão entre as páginas-->
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCadernoVirtual.MainPage"
             Title="Caderno Virtual">

    <StackLayout  VerticalOptions="Center" Padding="10" > <!-- centralizando e margem-->

        <Image x:Name="logo2" Style="{StaticResource logoGrande}" /> <!--colocando imagem -->

        <ScrollView > <!-- a imagem não rola junto com o conteúdo da página-->

            <Grid>
         <!--botões que direcionam para as páginas das matérias-->
                <Button Grid.Row="0"  Text="Primeiro" Clicked="Button_Clicked_3"  BackgroundColor="#AA0000"/>
                <Button Grid.Row="1"  Text="Segundo" Clicked="Button_Clicked" BackgroundColor="#555555"/>
                <Button Grid.Row="2"  Text="Terceiro" Clicked="Button_Clicked_1" BackgroundColor="#AA0000"/>
               
            </Grid>

        </ScrollView>

    </StackLayout>

</ContentPage>
